{
  "name": "chat-backend",
  "version": "1.0.0",
  "description": "A simple chat application backend built with Hono, SQLite, and Drizzle ORM",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "esbuild --minify --platform=node --bundle src/server.ts --outdir=build ",
    "start": "node build/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio --port 3005"
  },
  "keywords": [
    "hono",
    "sqlite",
    "drizzle-orm",
    "chat",
    "api"
  ],
  "author": "Kilo Code",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.31.2",
    "hono": "^4.4.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20.14.9",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "^0.22.8",
    "esbuild": "^0.25.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2"
  }
}
